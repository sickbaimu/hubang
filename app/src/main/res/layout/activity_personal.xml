<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jianbianp">
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_1"
        app:layout_heightPercent="28%"
        />
    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="昵称：白牧"
        android:gravity="center_vertical"
        android:layout_below="@id/image_view"
        app:layout_heightPercent="8.1%"/>
    <TextView
        android:id="@+id/text_view2"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="积分：1120"
        android:layout_below="@id/text_view"
        app:layout_heightPercent="8%"/>
    <TextView
        android:id="@+id/text_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="状态：好评如潮"
        android:layout_below="@id/text_view2"
        app:layout_heightPercent="8%"/>
    <Button
        android:id="@+id/History"
        android:text="历史记录"
        android:drawableTop="@drawable/c9"
        app:layout_widthPercent="33.333%"
        app:layout_heightPercent="20%"
        android:textColor="#ffffff"
        android:background="@drawable/jianbian_61"
        android:layout_below="@id/text_view3"
        />
    <Button
        android:id="@+id/Edition"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/c10"
        android:text="版本信息"
        android:background="@drawable/jianbian_62"
        app:layout_widthPercent="33.333%"
        app:layout_heightPercent="20%"
        android:layout_below="@id/text_view3"
        android:layout_toRightOf="@+id/History"
        />
    <Button
        android:id="@+id/Set"
        android:drawableTop="@drawable/c11"
        android:textColor="#ffffff"
        android:text="软件设置"
        app:layout_widthPercent="33.333%"
        android:background="@drawable/jianbian_63"
        app:layout_heightPercent="20%"
        android:layout_below="@id/text_view3"
        android:layout_toRightOf="@+id/Edition"
        />
    <Button
        android:id="@+id/Account"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/c12"
        android:text="账号信息"
        app:layout_widthPercent="33.333%"
        app:layout_heightPercent="20%"
        android:background="@drawable/jianbian_64"
        android:layout_below="@id/History"
        />
    <Button
        android:id="@+id/Help_and_feedback"
        android:drawableTop="@drawable/c13"
        android:text="帮助与反馈"
        app:layout_widthPercent="33.333%"
        android:textColor="#ffffff"
        app:layout_heightPercent="20%"
        android:layout_below="@id/History"
        android:background="@drawable/jianbian_65"
        android:layout_toRightOf="@+id/Account"
        />
    <Button
        android:id="@+id/Share"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/c14"
        android:text="分享"
        app:layout_widthPercent="33.333%"
        app:layout_heightPercent="20%"
        android:layout_below="@id/History"
        android:background="@drawable/jianbian_66"
        android:layout_toRightOf="@+id/Help_and_feedback"
        />
    <Button
        android:id="@+id/button_2"
        android:text="主页"
        android:layout_width="0dp"
        android:textColor="#ffffff"
        android:background="@drawable/jianbian_41"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="8%"
        />
    <Button
        android:id="@+id/button_3"
        android:textColor="#ffffff"
        android:background="@drawable/jianbian_42"
        android:text="求助"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button_2"
        android:layout_toRightOf="@id/button_2"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="8%"
        />
    <Button
        android:textColor="#ffffff"
        android:id="@+id/button_4"
        android:text="帮忙"
        android:background="@drawable/jianbian_43"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button_3"
        android:layout_toRightOf="@id/button_3"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="8%"
        />


    <Button
        android:id="@+id/button_5"
        android:text="个人"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button_4"
        android:layout_toRightOf="@id/button_4"
        app:layout_heightPercent="8%"
        android:textColor="#ffffff"
        app:layout_widthPercent="25%"
        android:background="@drawable/jianbian_44"
        />

</android.support.percent.PercentRelativeLayout>