<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/jianbianr"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="92%">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="快递代取"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="#ffffff"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:text="表单填写"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#ffffff"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/line1"
                    android:layout_marginLeft="60sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="快递公司："/>
                <Spinner
                    android:layout_toRightOf="@+id/line1"
                    android:id = "@+id/S1"
                    android:background="#FFFFFF"
                    android:entries="@array/languages"
                    android:layout_width = "140sp"
                    android:layout_height ="30sp" />


            </android.support.percent.PercentRelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/line2"
                    android:layout_marginLeft="60sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="领取编号："/>
                <EditText
                    android:layout_toRightOf="@+id/line2"
                    android:id = "@+id/S2"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:entries="@array/languages"
                    android:layout_width = "140sp"
                    android:layout_height ="30sp" />

            </android.support.percent.PercentRelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/line3"
                    android:layout_marginLeft="60sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="送达目的地："/>
                <EditText
                    android:layout_toRightOf="@+id/line3"
                    android:id = "@+id/S3"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:entries="@array/languages"
                    android:layout_width = "120sp"
                    android:layout_height ="30sp" />

            </android.support.percent.PercentRelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/line4"
                    android:layout_marginLeft="60sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="最长时限："/>
                <EditText
                    android:layout_toRightOf="@+id/line4"
                    android:id = "@+id/S4"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:entries="@array/languages"
                    android:layout_width = "140sp"
                    android:layout_height ="30sp" />
            </android.support.percent.PercentRelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/line5"
                    android:layout_marginLeft="60sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="收件人姓名："/>
                <EditText
                    android:layout_toRightOf="@+id/line5"
                    android:id = "@+id/S5"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:entries="@array/languages"
                    android:layout_width = "120sp"
                    android:layout_height ="30sp" />
            </android.support.percent.PercentRelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/line6"
                    android:layout_marginLeft="60sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="您的电话："/>
                <EditText
                    android:layout_toRightOf="@+id/line6"
                    android:id = "@+id/S6"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:entries="@array/languages"
                    android:layout_width = "140sp"
                    android:layout_height ="30sp" />
            </android.support.percent.PercentRelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/line7"
                    android:layout_marginLeft="60sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="悬赏积分："/>
                <EditText
                    android:layout_toRightOf="@+id/line7"
                    android:id = "@+id/S7"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:entries="@array/languages"
                    android:layout_width = "140sp"
                    android:layout_height ="30sp" />
            </android.support.percent.PercentRelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <TextView
                android:id="@+id/line8"
                android:layout_marginLeft="60sp"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="备注信息："/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>
            <EditText
                android:layout_marginLeft="60sp"
                android:layout_marginRight="60sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/S8"
                android:background="#ffffff"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cen"
                    android:text=" "
                    android:textSize="25sp"
                    android:background="#00000000"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"/>
                <Button
                    android:id="@+id/button_6"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:background="@drawable/jianbian"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="130dp"
                    android:layout_marginRight="130dp"
                    android:layout_gravity="center"
                    android:layout_toLeftOf="@+id/cen"

                    android:textSize="14sp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:text="确认"/>
                <Button
                    android:id="@+id/button_7"
                    android:layout_toRightOf="@+id/cen"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:background="@drawable/jianbian"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="130dp"
                    android:layout_marginRight="130dp"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:text="返回"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />


        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/button_2"
        android:text="主页"
        android:layout_width="0dp"
        android:textColor="#ffffff"
        android:background="@drawable/jianbian_41"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="8%"
        />
    <Button
        android:id="@+id/button_3"
        android:textColor="#ffffff"
        android:background="@drawable/jianbian_42"
        android:text="求助"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button_2"
        android:layout_toRightOf="@id/button_2"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="8%"
        />
    <Button
        android:textColor="#ffffff"
        android:id="@+id/button_4"
        android:text="帮忙"
        android:background="@drawable/jianbian_43"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button_3"
        android:layout_toRightOf="@id/button_3"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="8%"
        />


    <Button
        android:id="@+id/button_5"
        android:text="个人"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button_4"
        android:layout_toRightOf="@id/button_4"
        app:layout_heightPercent="8%"
        android:textColor="#ffffff"
        app:layout_widthPercent="25%"
        android:background="@drawable/jianbian_44"
        />


</android.support.percent.PercentRelativeLayout>
